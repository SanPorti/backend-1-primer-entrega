
{{#if isValid}}
<h1>Catálogo de Productos</h1>
<div id="products-container" class="container">
    {{#each products}} <!-- Cambiado de products a docs -->
    <div class="card">
        <p>{{this.id}}</p>
        <h2>{{this.title}}</h2>
        <p>{{this.description}}</p>
        <p><strong>Código:</strong> {{this.code}}</p>
        <p><strong>Precio:</strong> {{this.price}}</p>
        <p><strong>Stock:</strong> {{this.stock}}</p>
        <p><strong>Categoría:</strong> {{this.category}}</p>
        <button class="add-btn" data-id={{this.id}}>Agregar al Carrito</button>
    </div>
    {{/each}}
</div>
<div>
    {{#if hasPrevPage}}
    <a href="{{this.prevLink}}"><<</a>
    {{/if}}
    {{this.page}}
    {{#if hasNextPage}}
    <a href="{{this.nextLink}}">>></a>
    {{/if}}
</div>
{{else}}
    <h1>No hay Productos para mostrar.</h1>
{{/if}}

<script src="/socket.io/socket.io.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/js/cart.js"></script>

